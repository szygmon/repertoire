 <!--  Ciąg version jest rejestrowane w tabeli -->
 <version>1.05</version>
 <!-- Opis jest opcjonalny i domyślnie nazwa -->
 <description>COM_REPERTOIRE_DESC</description>
 
 <install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> <!-- Runs on update; New since J2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
 

 <!-- Uwaga atrybut folder:site
       Pliki zostana przeniesione do components/com_hello/  -->
 <files folder="site">
  <filename>controller.php</filename>
  <filename>repertoire.php</filename>
  <filename>index.html</filename>
  <folder>images</folder>
  <folder>js</folder>
  <folder>views</folder>
  <folder>models</folder>
  <folder>language</folder>
 </files>
 
 <languages folder="site/language">
			<language tag="pl-PL">pl-PL.com_repertoire.ini</language>
		</languages>
 
 <administration>
 <languages folder="admin/language">
			<language tag="pl-PL">pl-PL.com_repertoire.sys.ini</language>
			<language tag="pl-PL">pl-PL.com_repertoire.ini</language>
		</languages>
  <!-- Administration Menu Section -->
  <menu>COM_REPERTOIRE</menu>
 
  <!-- Administrator lista plików -->
	 <!-- Uwaga atrybut folder:admin
       Pliki zostanć przeniesione do administrator/components/com_hello/  -->
  <files folder="admin">
   <filename>repertoire.php</filename>
   <filename>access.xml</filename>
   <filename>config.xml</filename>
   <filename>controller.php</filename>
   <filename>excel_reader2.php</filename>
   <filename>index.html</filename>
   <folder>language</folder>
   <folder>controllers</folder>
   <folder>helpers</folder>
   <folder>models</folder>
   <folder>sql</folder>
   <folder>tables</folder>
   <folder>views</folder>
  </files>
 
 </administration>
</extension>